    "configurations": [
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            // "python": "${command:python.interpreterPath}",
            "module": "pytest",
            // "program": "${workspaceFolder}/run.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "-cn",
                "${workspaceFolder}/tests/test_mlstm/test_parallel/test_parallel_torch.py",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "LOGLEVEL": "DEBUG"
            }
        },
        {
            "name": "kernel_benchmark",
            "type": "debugpy",
            "request": "launch",
